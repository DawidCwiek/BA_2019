<!DOCTYPE html>
<html>
  <head>
    <title>Pik</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= value %>
      </div>
    <% end %>
    <div class="wrapper">
      <div class="row">
        <div id="sidebar" class="col-3 width-change menu">
          <div id="sidenav"></div>
          <%= javascript_pack_tag 'SideNav' %>
        </div>
        <div class="col-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
