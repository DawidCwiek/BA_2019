<div class="container arrow-container">
  <div class="col-1">
    <%= link_to (octicon "chevron-left", :height => 64), "/manage_io/#{@task.project.id}" %>
  </div>
</div>

<div class="container task-container">
  <div class="container task-container-2">

    <div class="row task-title-row">
      <div class="col-6">
        <h2><%= @task.title %></h1>
      </div>
      <div class="col-4">
        <h5>Assigned: 
          <% if @task.user %>
            <%= @task.user.full_name %>
          <% else %>
            No User
          <% end %>
        </h5>
      </div>
    </div>

    <div class="row">
      <div class="col-8 task-desc">
        <p class="text-justify"><%= @task.desc %></p>
      </div>
    </div>
      <div class="edit-button-row">
        <%= content_tag :div,
          id: "edit-task-modal",
          data: @task.to_json do %>
        <% end %>

        <%= javascript_pack_tag 'edit_task_form' %>
      </div>
  </div>
</div>
