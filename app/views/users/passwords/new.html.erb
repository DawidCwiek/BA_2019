<div class="jumbotron vertical-center">
  <div class="container ">
    <div class="row forgot-password">
      <div class="col-7">
        <h1 class="company-name">Menage.io</h1>
        <h3>Damian Gronowski</h3>
        <h3>Dawid Ćwiek</h3>
        <h3>Adam Kuczyński</h3>
        <h3>Filip Garlak</h3>
      </div>
      <div class="col-5">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Enter Email...",class:"form-control mb-2 mr-sm-2" %>
        </div>

        <div class="actions">
          <%= f.submit "Reset password", class: "btn btn-primary btn-lg" %>
        </div>
        <% end %>

        <div class="row-buttons">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>