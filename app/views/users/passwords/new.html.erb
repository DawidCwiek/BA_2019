<div class="vertical-center">
  <div class="container ">
    <div class="sign-up-container">
      <div class="row">
        <div class="col-7">
          <div class="d-flex align-items-center justify-content-center h-100">
            <div>
              <h1 class="company-name">Manage.io</h1>
              <h3>Damian Gronowski</h3>
              <h3>Dawid Ćwiek</h3>
              <h3>Adam Kuczyński</h3>
              <h3>Filip Garlak</h3>
            </div>
          </div>
        </div>
        <div class="col-5">
          <div class="form-user">
            <h2 class="sign-up-header">Forgot your password?</h2>
            <%= form_for(resource, as: resource_name, url:
            password_path(resource_name), html: { method: :post }) do |f| %> <%=
            render "devise/shared/error_messages", resource: resource %>

            <div class="form-user_fields">
              <div class="form-user_field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete:
                "email",placeholder: "Enter Email...",class:"input form-control
                mb-2 mr-sm-2" %>
              </div>
            </div>
            <div class="actions btn">
              <%= f.submit "Reset password", class: "btn btn-primary btn-lg" %>
            </div>

            <% end %>
            <div class="actions btn">
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
