<div class="vertical-center">
    <div class="container white">
      <div class="sign-up-container forgot-container">
      <div class="row">
        <div class="col-7">
            <div class="d-flex align-items-center justify-content-center h-100">
              <div>
                <h1 class="company-name">Manage.io</h1>
                <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/aroon0808", target: :_blank %>  Damian Gronowski </h3>
                <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/DawidCwiek", target: :_blank %>  Dawid Ćwiek </h3>
                <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/Kucziii", target: :_blank %>  Adam Kuczyński </h3>
                <h3><%= link_to (octicon "mark-github", :height => 40,class: "white"), "https://github.com/Timedar", target: :_blank %>  Filip Gralak</h3>
                <h6><%= link_to (octicon "mark-github", :height => 40,class: "white"), "https://github.com/DawidCwiek/BA_2019", target: :_blank %>  Praktyki binarapps 2019</h6>
              </div>
            </div>
            </div>
        </div>
        <div class="col-5 login-container-styling">

        <div class="form-user">
          <h2 class="sign-in-header">Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name),
            html: { method: :put }) do |f| %>
             <%= render "devise/shared/error_messages",
              resource: resource %>
             <%= f.hidden_field :reset_password_token %>

          <div class="form-user_fields">

          <div class="form-user_field">
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %> 
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password...", class: "input form-control mb-2 mr-sm-2" %>
          </div>

          <div class="form-user_field">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password...", class: "input form-control mb-2 mr-sm-2" %>
          </div>

          </div>

          <div class="actions btn">
            <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
          </div>
          <% end %> 
          <div class="actions btn">
          <%= render "users/shared/links" %>
          </div>
          </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
  </div>
