<div class="vertical-center">
  <div class="container">
    <div class="sign-up-container white">
    <div class="row">
      <div class="col-7">
          <div class="d-flex align-items-center justify-content-center h-100">
            <div>
              <h1 class="company-name">Manage.io</h1>
              <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/aroon0808", target: :_blank %>  Damian Gronowski </h3>
              <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/DawidCwiek", target: :_blank %>  Dawid Ćwiek </h3>
              <h3><%= link_to (octicon "mark-github", :height => 40), "https://github.com/Kucziii", target: :_blank %>  Adam Kuczyński </h3>
              <h3><%= link_to (octicon "mark-github", :height => 40,class: "white"), "https://github.com/Timedar", target: :_blank %>  Filip Gralak</h3>
              <h6><%= link_to (octicon "mark-github", :height => 40,class: "white"), "https://github.com/DawidCwiek/BA_2019", target: :_blank %>  Praktyki binarapps 2019</h6>
            </div>
          </div>  

      </div>
      <div class="col-5">
        <div class="form-user">
        <h2 class="sign-up-header">Sign up</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-user_fields">
            <div class="form-user_field">
                <%= f.label :full_name %><br />
                <%= f.text_field :full_name, autofocus: true, autocomplete: "Full Name", placeholder: "Full Name", class: "form-control mb-2 mr-sm-2" %>
              </div>

              <div class="form-user_field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email...", class: "input form-control mb-2 mr-sm-2" %>
              </div>

              <div class="form-user_field">
                <%= f.label :password %>
                <% if @minimum_password_length %>

                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password", class: "input form-control mb-2 mr-sm-2" %>
              </div>

              <div class="form-user_field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password " ,class: "form-control mb-2 mr-sm-2", placeholder:"Confirm password" %>
              </div>
        </div>


        <div class="actions btn">
          <%= f.submit "Sign up!", class: "btn btn-primary btn-lg" %>

        </div>
   <div class="actions btn">
          <h5 class="info">Already have and account?</h5>
          <%= render "users/shared/links"  %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
</div>
