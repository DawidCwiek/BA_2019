<div class="vertical-center">
  <div class="container">
    <div class="sign-up-container">
    <div class="row">
      <div class="col-7">
          <div class="d-flex align-items-center justify-content-center h-100">
            <div>
              <h1 class="company-name">Manage.io</h1>
              <h3>Damian Gronowski</h3>
              <h3>Dawid Ćwiek</h3>
              <h3>Adam Kuczyński</h3>
              <h3>Filip Garlak</h3>
            </div>
          </div>  
      
      </div>
      <div class="col-5">
        <div class="form-user">
        <h2 class="sign-up-header">Sign up</h2>
        
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-user_fields">
            <div class="form-user_field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "Name", placeholder: "Name", class: "form-control mb-2 mr-sm-2" %>
              </div>
      
              <div class="form-user_field">
                <%= f.label :surname %><br />
                <%= f.text_field :surname, autofocus: true, autocomplete: "Surname",placeholder: "Surname", class: "form-control mb-2 mr-sm-2" %>
              </div>
      
              <div class="form-user_field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email...", class: "input form-control mb-2 mr-sm-2" %>
              </div>
      
              <div class="form-user_field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
               
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password", class: "input form-control mb-2 mr-sm-2" %>
              </div>
      
              <div class="form-user_field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password " ,class: "form-control mb-2 mr-sm-2", placeholder:"Confirm password" %>
              </div>
        </div>
        

        <div class="actions btn">
          <%= f.submit "Sign up!", class: "btn btn-primary btn-lg" %>
         
        </div>
   <div class="actions btn">
          <h5 class="info">Already have and account?</h5>
          <%= render "users/shared/links"  %>
        </div>

        <% end %>
       
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
</div>